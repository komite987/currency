<table class="table table-striped text-center col-md-9">
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Symbol</th>
      <% if @user.id == current_user.id %>
        <th>Actions</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @user_coins.each do |user_coin| %>
      <tr>
        <td><%= user_coin.code %></td>
        <td><%= user_coin.name %></td>
        <td><%= user_coin.symbol %></td>
        <% if @user.id == current_user.id %>
          <td><%= link_to "Delete", user_coin_path(user_coin),
                      method: :delete,
                      data: {confirm: "Are you sure?"},
                      class: "btn-sm btn-danger" %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
