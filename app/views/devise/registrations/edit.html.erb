<div class="page-wrapper bg-gra-03 p-t-45 p-b-50">
  <div class="wrapper wrapper--w790">
    <div class="card card-5">
      <div class="card-heading">
        <h2 class="title">Edit
          <%= resource_name.to_s.humanize %></h2>
      </div>
      <div class="card-body">
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <div class="row no-padding">
          <div class="form-row col-6">
            <div class="name">First Name</div>
            <div class="value">
              <div class="input-group">
                <%= f.text_field :first_name, autofocus: true, class:"input--style-5", placeholder:"Your name" %>
              </div>
            </div>
          </div>
          &nbsp;&nbsp;&nbsp;&nbsp;
          <div class="form-row col-6">
            <div class="name text-center">Last name</div>
            <div class="value">
              <div class="input-group">
                <%= f.text_field :last_name, class:"input--style-5", placeholder:"Your last name" %>
              </div>
            </div>
          </div>
        </div>
        <div class="form-row">
          <div class="name">Email</div>
          <div class="value">
            <div class="input-group">
              <%= f.email_field :email, autocomplete: "email", class:"input--style-5", placeholder:"Enter Email" %>
            </div>
          </div>
        </div>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for:
            <%= resource.unconfirmed_email %></div>
        <% end %>
        <div class="form-row">
          <div class="name">Password</div>
          <% if @minimum_password_length %><% end %>
          <div class="value">
            <div class="input-group">
              <%= f.password_field :password, autocomplete: "new-password",class:"input--style-5", placeholder:"leave blank if you don't want to change it" %>
            </div>
          </div>
        </div>
        <div class="form-row">
          <div class="name">Password Confirmation</div>
          <div class="value">
            <div class="input-group">
              <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"input--style-5", placeholder:"Confirm Password" %>
            </div>
          </div>
        </div>
        <div class="form-row">
          <div class="name"> Current Password</div>
          <div class="value">
            <div class="input-group">
              <%= f.password_field :current_password, autocomplete: "current-password",class:"input--style-5", placeholder:"we need your current password to confirm your changes" %>
            </div>
          </div>
        </div>
        <div>
          <button class="btn btn--radius-2 btn--red" type="submit">Update</button>
        </div>
      <% end %>
      <h3>Cancel my account</h3>
      <p>Unhappy?
        <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
      <%= link_to "Back", :back %>
    </div>
  </div>
</div>
