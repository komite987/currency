<h3>Search for friends</h3>
<br>
<div id="friend-lookup">
  <%= form_tag search_friends_path, remote: true, method: :get, id:"friend-lookup-form" do %>
  <div class="form-group row col-md-12 no-padding text-center">
    <div class="col-md-9">
      <%= text_field_tag :search_params, params[:search_params], placeholder: "Enter something to search", autofocus: true, class: "form-control form-control-lg search-box input-lg"%>
    </div>
    <div class="col-md-3">
      <%= button_tag(type: :submit, class: "btn-lg btn-success") do %>
      <i class="fa fa-search"></i>
      Search
    <% end %>
  </div>
</div>
<% end %>
</div>
<div id="results">
  <%= render 'friends/result' %>
</div>
