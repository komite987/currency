<br>
<h1>My Friends</h1>
<br>
<%= render 'friends/lookup'%>
  <% if @friendships.size > 0 %>
    <table class="table table-striped text-center">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @friendships.each do |friend| %>
          <tr>
            <td><%= friend.full_name %></td>
            <td><%= friend.email %></td>
            <td>
              <%= link_to "View Profile", user_path(friend), class: "btn-primary btn-sm" %>
              <%= link_to "Remove Friend", friendship_path(friend), method: :delete, data: { confirm: "Are you sure?" }, class: "btn-sm btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
      <table>

      <% else %>
        <h4 class="col-lg-12">
          You Don't have any friends yet
        </h4>
      <% end %>
