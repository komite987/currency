<h2>User Details</h2>

<dl class="dl-horizontal">
  <dt><strong>Full Name</strong></dt>
  <dd><%= @user.full_name %></dd>
  <dt><strong>Email</strong></dt>
  <dd><%= @user.email %></dd>
</dl>

<% if @user.coins.size > 0 %>
  <%= render 'coins/list' %>
<% else %>
  <p class="lead">This user is not tracking any coins</p>
<% end %>

<%= link_to "Back", friends_path, class: "btn-sm btn-primary" %>
